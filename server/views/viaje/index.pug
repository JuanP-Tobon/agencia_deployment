extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`,class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p   
                    | Fecha ida: #{viaje.fecha_ida} 
                P
                    | Fecha vuelta: #{viaje.fecha_vuelta}
                p   Precio: 
                    | $#{viaje.precio}
                p   Disponibles: 
                    | #{viaje.disponibles}
                p= viaje.descripcion